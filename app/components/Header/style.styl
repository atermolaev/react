.menu {
    display: inline-block;
    list-style: inside none;
    padding: 0;
    margin: 0;

    & li{
        display: inline-block;
        margin-left: 10px;

        &:first-child{
            margin-left: 0;
        }    

        & a {
            text-decoration: none;
            color: #000000;
        }

        & a:hover {
            color: #1890ff;
            border-bottom: 3px #1890ff solid;
        }

    } 
}
